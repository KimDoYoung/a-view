APP_NAME=A-View Document Viewer
VERSION=1.0.1
DEBUG=false

# 서버 설정
PROTOCOL=https
HOST=0.0.0.0
PORT=8003
RELOAD=false

# Redis 설정 (Docker 컨테이너 - 포트 매핑)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# SSL설정
SSL_CERT_FILE=/certs/server.crt
SSL_KEY_FILE=/certs/server.key
# SSL_KEY_PASSWORD=your-key-pass   # 키에 패스워드 걸린 경우만
# SSL_CA_FILE=C:/certs/chain.pem    # 중간 인증서가 따로 있으면

# 운영용 Redis
REDIS_HOST=redis.your-domain.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password

# 베이스 폴더 (캐시, 로그등이 이 폴더 하위에 생성)
BASE_DIR=/home/aview
CACHE_TTL=3600

# LibreOffice 설정
LIBREOFFICE_TIMEOUT=60
LIBREOFFICE_PATH="/usr/bin/soffice"

# HTTP 설정
HTTP_TIMEOUT=30
MAX_FILE_SIZE=104857600
MAX_DOWNLOAD_SIZE=104857600


# 운영용 보안 설정 (특정 도메인만 허용)
ALLOWED_ORIGINS=https://asset-erp.your-domain.com,https://admin.your-domain.com

# 운영용 파일 크기 제한
MAX_FILE_SIZE=104857600  # 100MB
MAX_DOWNLOAD_SIZE=104857600  # 100MB

# 로그 설정
LOG_LEVEL=INFO

# 스케줄러 설정
EVERY_DAY_AT=03:00
EVERY_SUNDAY_AT=02:00

