# 운영 환경 설정
DEBUG=false
LOG_LEVEL=INFO
RELOAD=false

# 운영용 Redis
REDIS_HOST=redis.your-domain.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password

# 운영용 캐시 디렉토리
CACHE_DIR=/var/cache/aview
CACHE_TTL=86400  # 24시간

# 운영용 보안 설정 (특정 도메인만 허용)
ALLOWED_ORIGINS=https://asset-erp.your-domain.com,https://admin.your-domain.com

# 운영용 파일 크기 제한
MAX_FILE_SIZE=104857600  # 100MB
MAX_DOWNLOAD_SIZE=104857600  # 100MB

# 운영용 타임아웃
HTTP_TIMEOUT=30
LIBREOFFICE_TIMEOUT=60

# 운영용 로그 파일
LOG_FILE=/var/log/aview/app.log
LOG_MAX_SIZE=52428800  # 50MB
LOG_BACKUP_COUNT=10

# 운영용 서버 설정
HOST=0.0.0.0
PORT=8003