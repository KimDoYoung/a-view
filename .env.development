# 개발 환경 설정
DEBUG=true
LOG_LEVEL=DEBUG
RELOAD=true

# 개발용 Redis (로컬)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 개발용 캐시 디렉토리
CACHE_DIR=./cache_dev
CACHE_TTL=3600  # 1시간 (빠른 테스트용)

# 개발용 보안 설정 (모든 오리진 허용)
ALLOWED_ORIGINS=*

# 개발용 파일 크기 제한 (작게)
MAX_FILE_SIZE=10485760  # 10MB
MAX_DOWNLOAD_SIZE=10485760  # 10MB

# 개발용 타임아웃 (짧게)
HTTP_TIMEOUT=10
LIBREOFFICE_TIMEOUT=30