# A-View 로컬 개발 환경 설정
# AVIEW_MODE=local 일 때 로드됨

# 애플리케이션 설정
APP_NAME=A-View Document Processor
VERSION=1.0.0
DEBUG=true

# 서버 설정
HOST=0.0.0.0
PORT=8003
RELOAD=true

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 캐시 설정 (윈도우)
BASE_DIR=C:/temp/aview
CACHE_TTL=3600

# LibreOffice 설정
LIBREOFFICE_TIMEOUT=60

# HTTP 설정
HTTP_TIMEOUT=30
MAX_FILE_SIZE=104857600
MAX_DOWNLOAD_SIZE=104857600

# 보안 설정 (개발환경은 모든 도메인 허용)
ALLOWED_ORIGINS=*

# 로그 설정
LOG_LEVEL=DEBUG