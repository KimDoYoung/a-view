    "version": "0.2.0",
    "configurations": [
        {
            "name": "현재파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd" : "${fileDirname}",
            "justMyCode": false,
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "aview",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app",
                "A_VIEW_MODE": "local"
            },
            "args": [
                "main:app",
                // "--reload",
                "--port",
                "8003" // 원하는 포트 번호로 변경
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}